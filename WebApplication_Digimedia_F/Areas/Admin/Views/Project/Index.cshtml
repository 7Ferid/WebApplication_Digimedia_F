@using WebApplication_Digimedia_F.ViewModels.ProjectViewModels
@model List<ProjectGetVM>

<div class="container">
	<div class="row">
        <table class="table table-striped">
            <thead>
                <div class="row-2">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </div>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var project in Model)
                {
                         <tr>
                    <th scope="row">@project.Id</th>
                    <td>@project.Name</td>
                        <td>@project.CategoryName</td>

                    <td><img src="~/assets/images/@project.ImagePath" alt="Alternate Text" /></td>
                  <td>
                      <a asp-action="Update" asp-route-id="@project.Id" class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
                }
           


            </tbody>
        </table>
	</div>

</div>